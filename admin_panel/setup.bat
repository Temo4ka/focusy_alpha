@echo off
echo =====================================================
echo          FOCUSY Admin Panel Setup
echo =====================================================
echo.

REM Проверяем наличие Python
py --version >nul 2>&1
if errorlevel 1 (
    echo Ошибка: Python не найден. Установите Python 3.8+ с официального сайта.
    pause
    exit /b 1
)

REM Создаем виртуальное окружение
echo 1. Создание виртуального окружения...
if not exist "venv" (
    py -m venv venv
    echo Виртуальное окружение создано
) else (
    echo Виртуальное окружение уже существует
)

REM Активируем виртуальное окружение
echo.
echo 2. Активация виртуального окружения...
call venv\Scripts\activate.bat

REM Запускаем скрипт настройки
echo.
echo 3. Запуск автоматической настройки...
python setup_admin.py

echo.
echo =====================================================
echo Настройка завершена! Теперь можете запустить:
echo   start_admin.bat
echo =====================================================
pause
